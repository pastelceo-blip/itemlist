    <script>
        // Firebase ì„¤ì •
        const firebaseConfig = {
            apiKey: "AIzaSyAAXr7parhL6wQuUzy4MPvVhV6-J53wzcA",
            authDomain: "pastelmovie-cac7a.firebaseapp.com",
            databaseURL: "https://pastelmovie-cac7a-default-rtdb.firebaseio.com",
            projectId: "pastelmovie-cac7a",
            storageBucket: "pastelmovie-cac7a.firebasestorage.app",
            messagingSenderId: "543294016464",
            appId: "1:543294016464:web:47162285ca02d3cfb587d5",
            measurementId: "G-LK2Q13294B"
        };

        // ì „ì—­ ë³€ìˆ˜
        let products = [];
        let editingProduct = null;
        let db = null;
        let isOnline = false;

        // ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ ê´€ë¦¬
        function saveToLocalStorage() {
            try {
                localStorage.setItem('supplies_products', JSON.stringify(products));
                console.log('ğŸ’¾ ë¡œì»¬ ì €ì¥ ì™„ë£Œ');
            } catch (error) {
                console.error('âŒ ë¡œì»¬ ì €ì¥ ì‹¤íŒ¨:', error);
            }
        }

        function loadFromLocalStorage() {
            try {
                const savedProducts = localStorage.getItem('supplies_products');
                
                if (savedProducts) {
                    products = JSON.parse(savedProducts);
                }
                
                console.log(`ğŸ“± ë¡œì»¬ ë°ì´í„° ë¡œë“œ: ìƒí’ˆ ${products.length}ê°œ`);
                renderProducts();
            } catch (error) {
                console.error('âŒ ë¡œì»¬ ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨:', error);
                products = [];
                renderProducts();
            }
        }

        // Firebase ì´ˆê¸°í™”
        function initializeFirebase() {
            try {
                firebase.initializeApp(firebaseConfig);
                db = firebase.firestore();
                
                db.enablePersistence({ synchronizeTabs: true })
                    .then(() => {
                        console.log('ğŸ”„ ì˜¤í”„ë¼ì¸ ëª¨ë“œ í™œì„±í™”');
                    })
                    .catch((err) => {
                        console.log('âš ï¸ ì˜¤í”„ë¼ì¸ ëª¨ë“œ ì„¤ì • ì‹¤íŒ¨:', err.code);
                    });
                
                console.log('ğŸ”¥ Firebase ì´ˆê¸°í™” ì„±ê³µ');
                return true;
            } catch (error) {
                console.error('âŒ Firebase ì´ˆê¸°í™” ì‹¤íŒ¨:', error);
                return false;
            }
        }

        // ìœ í‹¸ë¦¬í‹° í•¨ìˆ˜
        function formatCurrency(amount) {
            return new Intl.NumberFormat('ko-KR').format(amount) + 'ì›';
        }

        function calculateUnitPrice() {
            const quantity = parseInt(document.getElementById('product-quantity').value) || 0;
            const price = parseInt(document.getElementById('product-price').value) || 0;
            
            const unitPrice = quantity > 0 && price > 0 ? Math.round(price / quantity) : 0;
            document.getElementById('calculated-unit-price').textContent = formatCurrency(unitPrice);
            
            return unitPrice;
        }

        // Firebase ë°ì´í„° ê´€ë¦¬
        async function loadData() {
            if (!db) {
                console.log('ğŸ“± Firebase ì—†ìŒ - ë¡œì»¬ ë°ì´í„° ì‚¬ìš©');
                loadFromLocalStorage();
                return;
            }
            
            try {
                console.log('ğŸ“¥ Firebase ë°ì´í„° ë¡œë“œ ì‹œë„...');
                
                const timeout = new Promise((_, reject) => 
                    setTimeout(() => reject(new Error('íƒ€ì„ì•„ì›ƒ')), 5000)
                );
                
                const dataPromise = db.collection('products').get();
                
                const productsSnapshot = await Promise.race([dataPromise, timeout]);

                products = productsSnapshot.docs.map(doc => ({
                    id: doc.id,
                    ...doc.data()
                }));

                isOnline = true;
                saveToLocalStorage();
                
                console.log(`âœ… Firebase ë°ì´í„° ë¡œë“œ ì™„ë£Œ: ìƒí’ˆ ${products.length}ê°œ`);
                renderProducts();
            } catch (error) {
                isOnline = false;
                console.error('âŒ Firebase ì—°ê²° ì‹¤íŒ¨:', error.message);
                console.log('ğŸ“± ë¡œì»¬ ë°ì´í„°ë¡œ ì „í™˜');
                loadFromLocalStorage();
            }
        }

        async function saveProductToFirebase(productData) {
            // ë¡œì»¬ì— ì¦‰ì‹œ ì €ì¥
            if (editingProduct) {
                const index = products.findIndex(p => p.id === editingProduct.id);
                if (index !== -1) {
                    products[index] = { ...editingProduct, ...productData };
                }
            } else {
                const newProduct = { id: Date.now().toString(), ...productData };
                products.push(newProduct);
            }
            
            saveToLocalStorage();
            renderProducts();
            
            if (!db) return;
            
            try {
                if (editingProduct) {
                    await db.collection('products').doc(editingProduct.id).update(productData);
                    console.log('âœï¸ Firebase ìƒí’ˆ ìˆ˜ì •:', editingProduct.id);
                } else {
                    await db.collection('products').add(productData);
                    console.log('â• Firebase ìƒí’ˆ ì¶”ê°€');
                }
                isOnline = true;
            } catch (error) {
                isOnline = false;
                console.log('âš ï¸ Firebase ì €ì¥ ì‹¤íŒ¨ - ë¡œì»¬ì—ë§Œ ì €ì¥ë¨:', error.message);
            }
        }

        async function deleteProductFromFirebase(productId) {
            products = products.filter(p => p.id !== productId);
            
            saveToLocalStorage();
            renderProducts();
            
            if (!db) return;
            
            try {
                await db.collection('products').doc(productId).delete();
                console.log('ğŸ—‘ï¸ Firebase ìƒí’ˆ ì‚­ì œ:', productId);
                isOnline = true;
            } catch (error) {
                isOnline = false;
                console.log('âš ï¸ Firebase ì‚­ì œ ì‹¤íŒ¨ - ë¡œì»¬ì—ë§Œ ì‚­ì œë¨:', error.message);
            }
        }

        // UI ê´€ë¦¬
        function updateConnectionStatus() {
            const statusEl = document.getElementById('connection-status');
            if (statusEl) {
                if (isOnline && db) {
                    statusEl.textContent = 'ğŸŸ¢ ì˜¨ë¼ì¸';
                    statusEl.style.color = '#059669';
                } else {
                    statusEl.textContent = 'ğŸ”´ ì˜¤í”„ë¼ì¸';
                    statusEl.style.color = '#dc2626';
                }
            }
        }

        function renderProducts() {
            const grid = document.getElementById('products-grid');
            grid.innerHTML = '';

            if (products.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        ğŸ“¦ ë“±ë¡ëœ ìƒí’ˆì´ ì—†ìŠµë‹ˆë‹¤.<br>
                        ìƒí’ˆì„ ì¶”ê°€í•´ì£¼ì„¸ìš”.
                    </div>
                `;
                return;
            }

            products.forEach(product => {
                const card = document.createElement('div');
                card.className = 'product-card';
                
                const hasLink = product.link && product.link.trim();
                const buyButton = hasLink 
                    ? `<a href="${product.link}" target="_blank" class="btn btn-success">êµ¬ë§¤í•˜ê¸°</a>`
                    : `<button class="btn btn-success" disabled>êµ¬ë§¤ë§í¬ ì—†ìŒ</button>`;
                
                const memoSection = product.memo && product.memo.trim()
                    ? `<div class="product-memo"><strong>ë¹„ê³ :</strong> ${product.memo}</div>`
                    : '';
                
                card.innerHTML = `
                    <div class="product-header">
                        <div class="product-name">${product.name}</div>
                        <span class="product-category">${product.category}</span>
                    </div>
                    <div class="product-body">
                        <div class="product-info">
                            <div class="info-item">
                                <div class="info-label">ë“¤ì–´ìˆëŠ” ìˆ˜ëŸ‰</div>
                                <div class="info-value">${product.quantity}ê°œ</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">íŒë§¤ê°€</div>
                                <div class="info-value">${formatCurrency(product.price)}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">1ê°œë‹¹ ë‹¨ê°€</div>
                                <div class="info-value">${formatCurrency(product.unitPrice)}</div>
                            </div>
                        </div>
                        <div class="product-actions">
                            ${buyButton}
                            <button class="btn btn-secondary" onclick="editProduct('${product.id}')">í¸ì§‘</button>
                            <button class="btn btn-danger" onclick="deleteProduct('${product.id}')">ì‚­ì œ</button>
                        </div>
                        ${memoSection}
                    </div>
                `;
                grid.appendChild(card);
            });
            
            updateConnectionStatus();
        }

        // ëª¨ë‹¬ ê´€ë¦¬
        function showProductModal(productId = null) {
            editingProduct = productId ? products.find(p => p.id === productId) : null;
            
            document.getElementById('product-modal-title').textContent = 
                editingProduct ? 'ìƒí’ˆ í¸ì§‘' : 'ìƒí’ˆ ì¶”ê°€';
            
            if (editingProduct) {
                document.getElementById('product-name').value = editingProduct.name;
                document.getElementById('product-category').value = editingProduct.category;
                document.getElementById('product-quantity').value = editingProduct.quantity;
                document.getElementById('product-price').value = editingProduct.price;
                document.getElementById('product-link').value = editingProduct.link || '';
                document.getElementById('product-memo').value = editingProduct.memo || '';
                calculateUnitPrice();
            } else {
                document.getElementById('product-name').value = '';
                document.getElementById('product-category').value = 'ê°„ì‹';
                document.getElementById('product-quantity').value = '';
                document.getElementById('product-price').value = '';
                document.getElementById('product-link').value = '';
                document.getElementById('product-memo').value = '';
                document.getElementById('calculated-unit-price').textContent = '0ì›';
            }
            
            document.getElementById('product-modal').classList.add('show');
        }

        function hideProductModal() {
            document.getElementById('product-modal').classList.remove('show');
            editingProduct = null;
        }

        function saveProduct() {
            const name = document.getElementById('product-name').value.trim();
            const category = document.getElementById('product-category').value;
            const quantity = parseInt(document.getElementById('product-quantity').value) || 0;
            const price = parseInt(document.getElementById('product-price').value) || 0;
            const link = document.getElementById('product-link').value.trim();
            const memo = document.getElementById('product-memo').value.trim();
            
            if (!name) {
                alert('ğŸ“ ìƒí’ˆëª…ì„ ì…ë ¥í•˜ì„¸ìš”.');
                return;
            }
            
            if (quantity <= 0) {
                alert('ğŸ“¦ ë“¤ì–´ìˆëŠ” ìˆ˜ëŸ‰ì„ ì˜¬ë°”ë¥´ê²Œ ì…ë ¥í•˜ì„¸ìš”.');
                return;
            }
            
            if (price <= 0) {
                alert('ğŸ’° íŒë§¤ê°€ë¥¼ ì˜¬ë°”ë¥´ê²Œ ì…ë ¥í•˜ì„¸ìš”.');
                return;
            }
            
            // URL í˜•ì‹ ê²€ì¦ (ë§í¬ê°€ ìˆëŠ” ê²½ìš°ë§Œ)
            if (link) {
                try {
                    new URL(link);
                } catch (e) {
                    alert('ğŸ”— ì˜¬ë°”ë¥¸ URL í˜•ì‹ìœ¼ë¡œ ì…ë ¥í•˜ì„¸ìš”. (ì˜ˆ: https://...)');
                    return;
                }
            }
            
            const unitPrice = Math.round(price / quantity);
            const productData = { name, category, quantity, price, link, memo, unitPrice };
            saveProductToFirebase(productData);
            hideProductModal();
        }

        function editProduct(productId) {
            showProductModal(productId);
        }

        function deleteProduct(productId) {
            const product = products.find(p => p.id === productId);
            if (confirm(`â“ '${product.name}' ìƒí’ˆì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?`)) {
                deleteProductFromFirebase(productId);
            }
        }

        // ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const openModal = document.querySelector('.modal.show');
                if (openModal) {
                    openModal.classList.remove('show');
                    editingProduct = null;
                }
            }
        });

        // ì•± ì´ˆê¸°í™”
        document.addEventListener('DOMContentLoaded', function() {
            console.log('ğŸš€ ì†Œëª¨í’ˆ ê´€ë¦¬ ì‹œìŠ¤í…œ ì‹œì‘');
            
            loadFromLocalStorage();
            
            const firebaseInitialized = initializeFirebase();
            
            if (firebaseInitialized) {
                console.log('ğŸ”„ Firebase ì—°ê²° ì‹œë„...');
                loadData();
            } else {
                console.log('ğŸ“± ë¡œì»¬ ëª¨ë“œë¡œë§Œ ì‹¤í–‰');
                isOnline = false;
                updateConnectionStatus();
            }
            
            setInterval(() => {
                if (!isOnline && db) {
                    console.log('ğŸ”„ Firebase ì¬ì—°ê²° ì‹œë„...');
                    loadData();
                }
            }, 30000);
        });
    </script>
